{
  "name": "yt-img-scraper",
  "description": "Downloads user images from comment section of any youtube video",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": ["storage", "unlimitedStorage", "webRequest"],
  "host_permissions": ["https://www.youtube.com/*", "https://yt3.ggpht.com/*"],
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}
